<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sensiolabs.form.type.job"
                 class="SensioLabs\JobBoardBundle\Form\Type\JobType">
            <tag name="form.type" alias="job" />
        </service>
        <service id="twig.extension.text"
                 class="Twig_Extensions_Extension_Text">
            <tag name="twig.extension" />
        </service>
        <service id="sensiolabs.twig.country_extension"
                 class="SensioLabs\JobBoardBundle\Twig\CountryExtension">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
